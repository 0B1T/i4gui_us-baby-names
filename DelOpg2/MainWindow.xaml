<Window x:Class="DelOpg1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DelOpg1"
        mc:Ignorable="d"
        Title="US Baby Names - V2" MinHeight="282" MinWidth="405" Loaded="OnLoad" Height="282" Width="405">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox VerticalAlignment="Bottom" Margin="6 0" BorderThickness="0">Decades</TextBox>
        <ListBox Name="decadesLB" Grid.Row="1" Margin="6"></ListBox>
        <TextBox Grid.Column="2" Grid.Row="0" VerticalAlignment="Bottom" Margin="6 0" BorderThickness="0">Top 10 baby names in the selected decade</TextBox>
        <ListBox Name="firstDecadeTopNames" Grid.Column="2" Grid.Row="1" Margin="6"/>
    </Grid>
</Window>
